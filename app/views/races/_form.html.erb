<%= form_with(model: race, local: true) do |form| %>
  <% if race.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(race.errors.count, "error") %> prohibited this race from being saved:</h2>

      <ul>
      <% race.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div class="field">
    <%= form.label :place %>
    <%= form.text_field :place %>
  </div>
  
  <div class="field">
	<label>RZs</label>
	<%= form.select "noOfRZTxt", options_for_select(1..99), {}, {:onChange => "$('#no_rzs').val($(this).val())" } %>
    <%= hidden_field_tag :no_rzs, 1 %>
  </div>
  
  <div class="field">
	<label>Racers</label>
	<%= form.select "noOfRacersTxt", options_for_select(1..99), {}, {:onChange => "$('#no_racers').val($(this).val())" } %>
    <%= hidden_field_tag :no_racers, 1 %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="actions">
    <a class="submit btn save" onClick="$('form').submit()">Create race</a>
  </div>
<% end %>
